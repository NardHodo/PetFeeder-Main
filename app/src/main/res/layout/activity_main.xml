<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mainAppColor"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/lexend_bold"
        android:text="CONDITION"
        android:textColor="@color/card_view_color"
        android:textSize="20sp"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/dividerLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/card_view_color"
        app:cardCornerRadius="3dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFeederStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/card_view_color"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/conditionCardViewHeader">

                <TextView
                    android:id="@+id/tvFeederStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/lexend"
                    android:padding="15dp"
                    android:text="FEEDER STATUS"
                    android:textColor="@color/white"
                    android:textSize="17sp"/>
                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/lexend"
                    android:text="CONNECT"
                    android:textSize="10sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:layout_below="@+id/conditionCardViewHeader">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="69dp"
                        android:layout_height="62dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/final_food_icon" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend"
                        android:text="Food Level"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_below="@+id/imageView1"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/tvFoodPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lexend"
                        android:text="GOOD"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_below="@+id/textView2"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="69dp"
                        android:layout_height="62dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/water" />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend"
                        android:text="Water Level"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_below="@+id/imageView2"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/tvWaterPercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lexend"
                        android:text="GOOD"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_below="@+id/textView3"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="69dp"
                        android:layout_height="62dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/bulb" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend"
                        android:text="Lights"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_below="@+id/imageView3"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:id="@+id/tvLightStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/lexend"
                        android:text="ON"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_below="@+id/textView4"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SCHEDULE"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/card_view_color"
        android:textSize="20sp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/dividerLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/card_view_color"
        app:cardCornerRadius="3dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/lexend"
                    android:text="Upcoming Meal Schedule:"
                    android:textColor="@color/card_view_color"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3" />

                <TextView
                    android:id="@+id/tvUpcomingMealTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/lexend"
                    android:text="00:00"
                    android:textColor="@color/card_view_color"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.363" />

                <Button
                    android:id="@+id/btnManage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:background="@drawable/main_button_drawable"
                    android:fontFamily="@font/lexend"
                    android:text="@string/manage_button"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.925"
                    app:layout_constraintStart_toEndOf="@+id/tvUpcomingMealTime"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ACTION"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/card_view_color"
        android:textSize="20sp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/dividerLine3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/card_view_color"
        app:cardCornerRadius="3dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <Button
            android:id="@+id/btnLights"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/main_button_drawable"
            android:fontFamily="@font/lexend"
            android:text="Open Lights"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnManualWater"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/main_button_drawable"
            android:fontFamily="@font/lexend"
            android:text="Drink"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnLights"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnManual"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/main_button_drawable"
            android:text="Feed"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnLights"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLights" />

        <Button
            android:id="@+id/btnAutomatic"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/main_button_drawable"
            android:text="Automatic"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/btnManualWater"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btnManualWater"
            app:layout_constraintTop_toBottomOf="@+id/btnManualWater" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>